<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<main>
<div class='container px-5 px-sm-0'>
<div class='row'>
<div class='col-md-3'>
 <%= render 'users/prof', user:@user, book:@newbook %>
</div>

<div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>
        
        <table class='table'>
          <tbody>
             <tr>
                  <ul class="books">
                   <td>
                       <%= link_to user_path(@user.id) do %>
                       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'default-image.jpg' %>
                       <% end %>
                      <br><%= link_to @book.user.name, user_path(@user.id) %></br>
                   </td> 
                  
                   <td><%= link_to @book.title, book_path(@book.id) %></td>
                   <td><%= @book.body %></td>
                 
                   
                   <% if @book.user == current_user %>
            <td>
               <a class="btn btn-sm btn-success" href="/books/<%= @book.id %>/edit">Edit</a>
               <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete" href="/books/<%= @book.id %>">Destroy</a>
                   <% else %>
            </td>
               <td></td>
               <td></td>
                   <% end %>
              </ul>
             </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>