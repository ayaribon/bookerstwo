 <p id="notice"><%= flash[:notice] %></p>
        <h2>User info</h2>
        <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'default-image.jpg' %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>  <!-- 固定値 -->
          </tr>
        </table>　 
        <div class='row'>
          <!-- 編集リンク実装済み -->
          <a class="btn btn-outline-secondary btn-block" href="/users/<%= user.id %>/edit">
            <i class="fas fa-user-cog"></i>
          </a>
        </div>
        <h2 class="mt-3">New book</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
<%= form_with model:book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
<p></p>
  <%= f.submit 'Create Book' %>

<% end %>


